@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-success"  title="Manage"><i class="fa-solid fa-globe"></i> Bienvenido @User.Identity?.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Tasks/Index")">
                <button type="submit" class="nav-link btn btn-link text-success"><i class="fa-solid fa-right-from-bracket"></i> Salir</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-success" asp-area="Identity" asp-page="/Account/Register"> <i class="fa-solid fa-address-card"></i> Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  text-success" asp-area="Identity" asp-page="/Account/Login"> <i class="fa-solid fa-user"></i> Iniciar Sesión</a>
        </li>
    }
</ul>
