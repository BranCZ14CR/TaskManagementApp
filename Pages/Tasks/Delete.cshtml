@* Pantalla para eliminar una tarea, contiene la información de la misma y acciones para el usuario  *@

@page
@model TaskManagementApp.Pages.Tasks.DeleteModel

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="container mt-5">
    <h1 class="text-danger text-center">Eliminar Tarea</h1>

    <div class="card shadow-sm mt-4 alert alert-secondary">
        <div class="card-body">
            <h4 class="card-title">@Model.TaskItem.Titulo</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Descripción:</dt>
                <dd class="col-sm-9">@Model.TaskItem.Descripcion</dd>

                <dt class="col-sm-3 font-weight-bold">Fecha de Vencimiento:</dt>
                <dd class="col-sm-9">@Model.TaskItem.FechaVencimiento.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 font-weight-bold">Estado:</dt>
                <dd class="col-sm-9">
                    @if (Model.TaskItem.Completada)
                    {
                        <span class="badge bg-success">Completada</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pendiente</span>
                    }
                </dd>

                <dt class="col-sm-3 font-weight-bold">Correo del Usuario:</dt>
                <dd class="col-sm-9">@Model.UserEmail</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 text-center">
        <form method="post">
            <input type="hidden" asp-for="TaskItem.Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="fas fa-trash-alt"></i> Eliminar
            </button>
            <a asp-page="./Index" class="btn btn-secondary ml-2 btn-lg">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </form>
    </div>
</div>
