@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de Registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Esta aplicación actualmente no tiene un remitente de correo electrónico real registrado
            <strong> Click aquí para confirmar: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Activar cuenta</a> </strong>
        </p>
    }
    else
    {
        <p>
            Por favor, verifique su correo electrónico para confirmar su cuenta.
        </p>
    }
}

